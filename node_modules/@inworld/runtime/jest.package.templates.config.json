{
    "testTimeout": 30000,
    "coveragePathIgnorePatterns": ["node_modules", "bin", "build"],
    "preset": "ts-jest",
    "modulePathIgnorePatterns": [
      "<rootDir>/__tests__/templates/helpers",
      "<rootDir>/__tests__/templates/fixtures",
      "<rootDir>/sandbox",
      "<rootDir>/.context"
    ],
    "reporters": ["default",
      ["jest-junit", {
        "outputDirectory": "reports",
        "outputName": "report-package-templates.xml"
      }]
    ],
    "setupFiles": ["<rootDir>/__tests__/setup-tests.ts"],
    "testEnvironment": "allure-jest/node",
    "testEnvironmentOptions": {
      "resultsDir": "./reports/allure-package-templates-results"
    },
    "globals": {
      "PACKAGE_TEMPLATES_ONLY": true
    }
  }
